  CREATE TABLE correct_answers (
  quiz_id VARCHAR PRIMARY KEY,
  ca_1 VARCHAR,
  ca_2 VARCHAR,
  ca_3 VARCHAR,
  ca_4 VARCHAR,
  ca_5 VARCHAR,
  ca_6 VARCHAR,
  ca_7 VARCHAR,
  ca_8 VARCHAR
) WITH (
  KAFKA_TOPIC = 'correct_answers',
  VALUE_FORMAT = 'JSON',
  PARTITIONS = 1
);

-- Insert the correct answers into the table
INSERT INTO correct_answers (quiz_id, ca_1,ca_2,ca_3,ca_4,ca_5,ca_6,ca_7,ca_8)
VALUES ('1', 'A','B','C','D','E','F','G','H');


CREATE STREAM submitted_answers_st (
  `1` VARCHAR,
  `2` VARCHAR,
  `3` VARCHAR,
  `4` VARCHAR,
  `5` VARCHAR,
  `6` VARCHAR,
  `7` VARCHAR,
  `8` VARCHAR,
  req_id VARCHAR,
  quiz_id VARCHAR
) WITH (
  KAFKA_TOPIC = 'submitted_answers',
  VALUE_FORMAT = 'JSON'
);


CREATE STREAM evaluated_answers_q1 AS
  SELECT
    sa.quiz_id,
    sa.req_id,
    ca.quiz_id,
    sa.`1` AS answer_1,
    sa.`2` AS answer_2,
    sa.`3` AS answer_3,
    sa.`4` AS answer_4,
    sa.`5` AS answer_5,
    sa.`6` AS answer_6,
    sa.`7` AS answer_7,
    sa.`8` AS answer_8,
    ca.ca_1 AS ca_1,
    ca.ca_2 AS ca_2,
    ca.ca_3 AS ca_3,
    ca.ca_4 AS ca_4,
    ca.ca_5 AS ca_5,
    ca.ca_6 AS ca_6,
    ca.ca_7 AS ca_7,
    ca.ca_8 AS ca_8,
    CASE WHEN sa.`5` = ca.ca_5 THEN 1 ELSE 0 END +
    CASE WHEN sa.`6` = ca.ca_6 THEN 1 ELSE 0 END +
    CASE WHEN sa.`7` = ca.ca_7 THEN 1 ELSE 0 END +
    CASE WHEN sa.`8` = ca.ca_8 THEN 1 ELSE 0 END AS total_score
  FROM submitted_answers_st sa
  LEFT JOIN correct_answers ca ON  sa.quiz_id = ca.quiz_id
  WHERE sa.quiz_id = '1';

CREATE TABLE QUERYABLE_CORRECT_ANSWERS AS SELECT * FROM CORRECT_ANSWERS;

